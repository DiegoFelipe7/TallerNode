html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
        title Buscador de juegos
        script(type='text/javascript').
            function UserGame() {
                var value = document.getElementById('id').value;
                window.location.href=`http://localhost:3000/game/${value}`
            }
            function UserWinner() {
                var value = document.getElementById('id').value;
                window.location.href=`http://localhost:3000/game/${value}/winner`
            }
        
    body
     nav.navbar.navbar-expand-lg.navbar-light.bg-dark
        div.container-fluid
            div.collapse.navbar-collapse
                ul.navbar-nav.text-center
                    li.nav-item
                        a.nav-link.active.text-white.fw-bold.p-2(href="/" ) Player Registration
                        
                    li.nav-item.text-white.fw-bold
                        a.nav-link.active.text-white.fw-bold.p-2(href="/starGame" ) StarGame
    div.d-flex.justify-content-center.align-items-center.vh-100.h-95
        form.w-25.border.p-5.bg-light.shadow.rounden.bg-secondary(action="/game" autocomplete="off")
            h2.text-dark.text-center.text-uppercase.mb-3 games finder
            div.form-group.mb-2
                input(type="text", name="id" id="id" placeholder="Enter the game id" required).form-control
            div.form-group.mb-2
                button(type="button" class="btn btn-dark w-100 fw-bold" onclick="UserGame()") Search Game
            div.form-group.mb-2
                button(type="button" class="btn btn-light w-100 fw-bold" onclick="UserWinner()") Search Winner